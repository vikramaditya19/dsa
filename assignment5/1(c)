#include<iostream>
using namespace std;
class Node{
 public:
 int data;
Node*next;
Node(int val){
    data=val;
    next=NULL;
}
};
class List{
    Node*head;
    Node*tail;
    public:
    List(){
        head=tail=NULL;
    }
   void insert_at_position(int val,int pos){
          Node*temp=head;
          for(int i=0;i<pos-1;i++){
            temp=temp->next;
          }
        Node*newNode=new Node(val);
           newNode->next=temp->next;
           temp->next=newNode;
  
        }
};
